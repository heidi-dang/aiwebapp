# Runner service
PORT=4002

# Required: Bearer token for all runner endpoints
RUNNER_TOKEN=change_me

# Optional CORS origin (if you ever call runner directly in browser)
CORS_ORIGIN=http://localhost:4000
# Alternative UI dev port
# CORS_ORIGIN=http://localhost:3006

# SQLite persistence (set to 'false' to use in-memory store)
RUNNER_PERSIST=true
RUNNER_DB=./runner.db

# Concurrency limit
RUNNER_MAX_CONCURRENCY=2

# VS Code Bridge connection (Phase 4)
# BRIDGE_URL=http://127.0.0.1:3210
# BRIDGE_TOKEN=your_bridge_token

RUNNER_URL=http://localhost:4002

# Local Copilot bridge (optional)
AI_API_URL=http://localhost:8080

# Ollama local LLM (optional)
OLLAMA_API_URL=http://localhost:11434/api
OLLAMA_MODEL=qwen2.5-coder:7b

# Runtime limits
MAX_ITERATIONS=10
REQUEST_TIMEOUT_MS=30000
MAX_PAYLOAD_SIZE=1048576
FEATURE_X_ENABLED=false
