# Runner service
PORT=8788

# Required: Bearer token for all runner endpoints
RUNNER_TOKEN=change_me

# Optional CORS origin (if you ever call runner directly in browser)
CORS_ORIGIN=http://localhost:3000

# SQLite persistence (set to 'false' to use in-memory store)
RUNNER_PERSIST=true
RUNNER_DB=./runner.db

# VS Code Bridge connection (Phase 4)
# BRIDGE_URL=http://127.0.0.1:3210
# BRIDGE_TOKEN=your_bridge_token

RUNNER_URL=http://localhost:3002

# Local Copilot bridge (optional)
AI_API_URL=http://localhost:8080
